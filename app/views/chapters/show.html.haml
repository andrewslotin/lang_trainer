.page-header
  %h1= resource.title
%table.table.table-striped
  - resource.entries.each do |entry|
    %tr
      %td= "#{entry.word} #{entry.frequency}"
      %td= link_to "Add to dictionary", dictionary_entries_path(resource.dictionary.id, entry: {word: entry.word}), method: :post
      %td= link_to "Ignore", ignore_book_chapter_entry(parent, resource, entry), method: :put