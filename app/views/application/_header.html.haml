- if user_signed_in?
  %ul.nav
    %li= link_to "Dictionaries", dictionaries_path
    %li= link_to "Books", books_path
  %ul.nav.pull-right
    %li.divider-vertical
      = link_to "javascript:void(0)", :class => "dropdown-toggle", :data => { :toggle => "dropdown" } do
        = current_user.name
        %b.caret
      %ul.dropdown-menu
        %li= link_to "Sign out", signout_path
- else
  %ul.nav.pull-right
    %li.divider-vertical= link_to "Login", signin_path